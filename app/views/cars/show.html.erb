<div class="container">
  <div class="row">
    <div class="col-sm-8">

      <div class="card-trip">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% @car.photos.each do |photo| %>
              <div class="carousel-item <%= " active" if photo == @car.photos.first %>">
                <%= cl_image_tag photo.key, class: "carousel-image" %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div class="card-trip-infos">
          <div>
            <h2><%= @car.brand %> <%= @car.model %> <%= @car.year %></h2>
            <p><%= @car.description %></p>
            <p><%= @car.address %></p>
          </div>
          <h2 class="card-trip-pricing">Â£<%= @car.price.round %> per day</h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>

          <%= link_to "Edit car", edit_car_path(@car), class: 'btn btn-warning' %>

          <%= link_to "Delete car", car_path(@car), class: 'btn btn-warning', method: :delete, data: { confirm: "Are you sure you want to delete #{@car.model}?" } %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-container">
        <h4><strong>Add a booking for <%= @car.brand %> <%= @car.model %></strong></h4>
        <%= simple_form_for [@car, @booking] do |f| %>
          <%= f.input :start_date, html5: true  %>
          <%= f.input :end_date, html5: true  %>
          <%= f.button :submit, class: "btn btn-warning" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

